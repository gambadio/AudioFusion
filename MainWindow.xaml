<Window x:Class="AudioFusion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioFusion"
        mc:Ignorable="d"
        Title="AudioFusion" 
        Height="450" 
        Width="550"
        WindowStartupLocation="CenterScreen"  
        Closing="Window_Closing">
    <Grid Margin="15" Name="MainPanel">        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Logo and Title -->
            <RowDefinition Height="Auto"/> <!-- Output Fusion GroupBox -->
            <RowDefinition Height="Auto"/> <!-- Input Fusion GroupBox -->
            <RowDefinition Height="Auto"/> <!-- Refresh Button -->
            <RowDefinition Height="*"/>    <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Logo and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="pack://application:,,,/logo.png" Width="50" Height="50" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="AudioFusion" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>        <!-- Output Fusion Section -->
        <GroupBox Grid.Row="1" Header="Output Fusion (Mirror System Audio to Two Headsets)" FontWeight="SemiBold" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <TextBlock Text="System Default Output (Primary Headset):" Margin="0,0,0,2"/>
                <TextBlock x:Name="DefaultOutputDeviceText" Text="Loading..." FontWeight="Normal" Margin="0,0,0,10" FontStyle="Italic"/>

                <TextBlock Text="Select Secondary Headset Output:" Margin="0,5,0,2"/>
                <ComboBox x:Name="SecondaryHeadsetComboBox" Margin="0,0,0,5"/>

                <!-- Volume Slider for Secondary Headset -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                    <TextBlock Text="Volume:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider x:Name="SecondaryVolumeSlider" Minimum="0" Maximum="100" Value="100" Width="150" TickFrequency="10" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=SecondaryVolumeSlider, Path=Value, StringFormat=F0}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <Button x:Name="OutputFusionButton" Content="Start Output Fusion" Height="35" Click="OutputFusionButton_Click" Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Input Fusion Section -->
        <GroupBox Grid.Row="2" Header="Input Fusion (Mix Two Microphones for Teams)" FontWeight="SemiBold" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <TextBlock Text="Primary Microphone:" Margin="0,0,0,2"/>
                <ComboBox x:Name="PrimaryMicrophoneComboBox" Margin="0,0,0,5"/>

                <TextBlock Text="Secondary Microphone:" Margin="0,5,0,2"/>
                <ComboBox x:Name="SecondaryMicrophoneComboBox" Margin="0,0,0,5"/>

                <!-- Volume Controls -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                    <TextBlock Text="Primary Volume:" VerticalAlignment="Center" Margin="0,0,5,0" Width="100"/>
                    <Slider x:Name="PrimaryMicVolumeSlider" Minimum="0" Maximum="100" Value="100" Width="120" TickFrequency="10" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=PrimaryMicVolumeSlider, Path=Value, StringFormat=F0}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                    <TextBlock Text="Secondary Volume:" VerticalAlignment="Center" Margin="0,0,5,0" Width="100"/>
                    <Slider x:Name="SecondaryMicVolumeSlider" Minimum="0" Maximum="100" Value="100" Width="120" TickFrequency="10" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding ElementName=SecondaryMicVolumeSlider, Path=Value, StringFormat=F0}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Echo Monitoring -->
                <CheckBox x:Name="EchoMonitoringCheckBox" Content="Enable Echo Monitoring (Hear yourself in headphones)" Margin="0,0,0,10"/>

                <Button x:Name="InputFusionButton" Content="Start Input Fusion" Height="35" Click="InputFusionButton_Click" Padding="10,5"/>
                
                <TextBlock x:Name="InputFusionStatusText" Text="Select microphones and click Start to begin input fusion. Teams will see the mixed audio as your default microphone." 
                          Margin="0,10,0,0" FontStyle="Italic" TextWrapping="Wrap" FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </GroupBox>

        <!-- Refresh Button -->
        <Button x:Name="RefreshDevicesButton" Grid.Row="3" Content="Refresh Audio Devices" Click="RefreshDevicesButton_Click" Margin="0,5,0,10" Padding="10,5" HorizontalAlignment="Center" Width="200"/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>