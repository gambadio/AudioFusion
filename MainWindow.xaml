<Window x:Class="AudioFusion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioFusion"
        mc:Ignorable="d"
        Title="AudioFusion" 
        Height="750" 
        Width="550"
        WindowStartupLocation="CenterScreen"  
        Closing="Window_Closing">
    <Grid Margin="15" Name="MainPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Logo and Title -->
            <RowDefinition Height="Auto"/> <!-- Output Fusion GroupBox -->
            <RowDefinition Height="Auto"/> <!-- Refresh Button -->
            <RowDefinition Height="Auto"/> <!-- Mic Switching GroupBox -->
            <RowDefinition Height="*"/>    <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Logo and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="pack://application:,,,/logo.png" Width="50" Height="50" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="AudioFusion" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Output Fusion Section -->
        <GroupBox Grid.Row="1" Header="Output Fusion (Mirror System Audio to Two Headsets)" FontWeight="SemiBold" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <TextBlock Text="System Default Output (Primary Headset):" Margin="0,0,0,2"/>
                <TextBlock x:Name="DefaultOutputDeviceText" Text="Loading..." FontWeight="Normal" Margin="0,0,0,10" FontStyle="Italic"/>

                <TextBlock Text="Select Secondary Headset Output:" Margin="0,5,0,2"/>
                <ComboBox x:Name="SecondaryHeadsetComboBox" Margin="0,0,0,15"/>

                <Button x:Name="OutputFusionButton" Content="Start Output Fusion" Height="35" Click="OutputFusionButton_Click" Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Refresh Button -->
        <Button x:Name="RefreshDevicesButton" Grid.Row="2" Content="Refresh Audio Devices" Click="RefreshDevicesButton_Click" Margin="0,5,0,10" Padding="10,5" HorizontalAlignment="Center" Width="200"/>

        <!-- Microphone Switching Section -->
        <GroupBox Grid.Row="3" Header="Microphone Switching (Choose Default Microphone)" FontWeight="SemiBold" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <TextBlock Text="Current System Default Microphone:" Margin="0,0,0,2"/>
                <TextBlock x:Name="DefaultMicrophoneText" Text="Loading..." FontWeight="Normal" Margin="0,0,0,15" FontStyle="Italic"/>
                
                <TextBlock Text="Select Primary Microphone:" Margin="0,5,0,2"/>
                <ComboBox x:Name="MicOneComboBox" Margin="0,0,0,10" SelectionChanged="MicComboBox_SelectionChanged"/>

                <TextBlock Text="Select Secondary Microphone:" Margin="0,5,0,2"/>
                <ComboBox x:Name="MicTwoComboBox" Margin="0,0,0,15" SelectionChanged="MicComboBox_SelectionChanged"/>

                <TextBlock Text="Mic Selection:" Margin="0,5,0,5"/>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="MicOneName" Grid.Column="0" Text="Mic 1" VerticalAlignment="Center"/>
                    <Slider x:Name="MicSelectionSlider" Grid.Column="1" Minimum="0" Maximum="1" Value="0" 
                            Margin="10,0" TickFrequency="1" IsSnapToTickEnabled="True" 
                            TickPlacement="BottomRight" ValueChanged="MicSelectionSlider_ValueChanged"/>
                    <TextBlock x:Name="MicTwoName" Grid.Column="2" Text="Mic 2" VerticalAlignment="Center"/>
                </Grid>

                <Button x:Name="MicSwitchingButton" Content="Enable Mic Switching" Height="35" Click="MicSwitchingButton_Click" Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="5" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>